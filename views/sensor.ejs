<script>
  $(document).ready(function () {
    $('.sidebar-menu').tree();
  });
  function cekdata(datas){
  $.ajax({
          url: "/api/data",
          method: "POST",
          data : {
            topic : "/sensor/"+datas,
            limit: "1"
          },
          success: function(data) {
            console.log(data);
              for(var i in data) { 
                $("#"+datas).text(data[i].message);
              }
          },
          error: function(data) {
            console.log(data);
          }
        });
};
setInterval(function(){
  cekdata('suhu');
  cekdata('kelembaban');
  cekdata('gas');
