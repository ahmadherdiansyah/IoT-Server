function adddata(){
  $.ajax({
          url: "/api/data",
          method: "POST",
          data : {
            topic : "generic_brand_810/generic_device/v1/common",
            limit : "1"
          },
          success: function(data) {
            console.log(data);
              for(var i in data) {
                var Message = data[0].message;
                var newMessage = Message.replace(',{',',');
                var newMessage1 = newMessage.replace('},', ',');
